
@using Web.UI.Models
@model PoliciesModel

@{
    ViewBag.Title = "Insuarance";
}

@using (Html.BeginForm("Grid", "Policy"))
{
    @Html.AntiForgeryToken()
    <div class="col-md-12" style="margin-top: 25px; height: 100%; width: 100%; border-radius: 20px; background-color: white; ">
        <div class="row">
            <div class="col-md-6">
                <div>
                    <div class="form-group" style="margin:10%; margin-top: 5%;  border-radius: 20px; background-color: whitesmoke;">
                        <div style="text-align:center">
                            <label for="gender1" class="col-sm-3">Client</label>
                        </div>
                        <div class="col-sm-4">
                            @Html.DropDownListFor(model => Model.ClientIdSelected,
                            new SelectList(Model.ClientList, "id", "name"),
                            new
                            {
                                @class = "btn btn-default dropdown-toggle",
                            })
                        </div>

                        <div style="margin-left:10%">
                            <input type="submit" value="View Policies" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">AmountInsured</th>
                                <th scope="col">Email</th>
                                <th scope="col">InceptionDate</th>
                                <th scope="col">InstallmentPayment</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ClientPolicies)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.amountInsured)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.InceptionDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.InstallmentPayment)
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}


